@using Website.ViewModel
@model  List<BookViewModel>

<div class="product__indicator--4 arrows_style owl-carousel owl-theme">
    @{
        var group = Model.GroupBy(r => Model.IndexOf(r) / 2).ToList();
        foreach (var pitem in group)
        {
            <div class="single__product">
                @foreach (var item in pitem)
                {
                    <!-- Start Single Product -->
                    <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                        <div class="product product__style--3">
                            <div class="product__thumb">
                                <a class="first__img" href="#"><img src="~/Content/assets/images/books/@item.Book_Cover" alt="product image" style="height:340px;width:270px"></a>
                                <a class="second__img animation1" href="#"><img src="~/Content/assets/images/books/@item.Book_BCover" alt="product image" style="height:340px;width:270px"></a>
                                @if (item.IsHot)
                                {
                                    <div class="hot__box">
                                        <span class="hot-label">HOT</span>
                                    </div>
                                }
                                else if (item.IsBestSeller)
                                {
                                    <div class="hot__box">
                                        <span class="hot-label">BEST SELLER</span>
                                    </div>
                                }
                                else
                                {
                                }
                            </div>
                            <div class="product__content content--center">
                                <h4><a href="#">@item.Title</a></h4>
                                <ul class="prize d-flex">
                                    <li>@item.Price.ToString("N0") VNĐ</li>
                                </ul>
                                <div class="action">
                                    <div class="actions_inner">
                                        <ul class="add_to_links">
                                            <li><a class="cart" href="cart.html"><i class="bi bi-shopping-bag4"></i></a></li>
                                            <li><a class="wishlist" href="wishlist.html"><i class="bi bi-shopping-cart-full"></i></a></li>
                                            <li><a data-toggle="modal" title="Quick View" onclick="" class="quickview modal-view detail-link" href="#productmodal"><i class="bi bi-search"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Start Single Product -->
                }
            </div>
        }
    }
</div>

