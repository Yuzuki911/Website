<script>
    function PopupModal(id) {
        //var id = $('#popup').attr("data-new");
        $.ajax({
            type: 'POST',
            url: '/Home/DetailPopup',
            dataType: 'json',
            data: { Id: id },
            success: function (res) {
                console.log(res.Book_Cover);
                var html = '';
                html += '<div class="product-images">';
                html += '<div class="main-image images">';
                html += '<img alt="big images" style="width:300px;height:450px" src="/Content/assets/images/books/' + res.Book_Cover + '">';
                html += '</div></div>';
                html += ' <div class="product-info">';
                html += '<h1>' + res.Title + '</h1>';
                html += '<div class="quick-desc"> ' + res.Excerpt + ' </div >';
                html += '<br/>';
                html += '<div class="price-box-3">';
                html += '<div class="s-price-box">';
                var price = res.Price;
                price = price.toLocaleString('de-DE');
                html += '<span class="new-price">' + price + ' VNĐ </span>';
                html += ' </div>';
                html += ' </div>';
                html += '<br/>';
                html += '<div class="social-sharing">';
                html += '<div class="widget widget_socialsharing_widget">';
                html += '<h3 class="widget-title-modal">Share this product</h3>';
                html += '<ul class="social__net social__net--2 d-flex justify-content-start">';
                html += '<li class="facebook"><a href="#" class="rss social-icon"><i class="zmdi zmdi-rss"></i></a></li>';
                html += '<li class="linkedin"><a href="#" class="linkedin social-icon"><i class="zmdi zmdi-linkedin"></i></a></li>';
                html += '<li class="pinterest"><a href="#" class="pinterest social-icon"><i class="zmdi zmdi-pinterest"></i></a></li>';
                html += '<li class="tumblr"><a href="#" class="tumblr social-icon"><i class="zmdi zmdi-tumblr"></i></a></li>';
                html += ' </ul> </div></div>';
                html += '<div class="addtocart-btn">';
                html += '<a href="#">Add to cart</a>';
                html += '</div></div>';
                $('#tbody').html(html);
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
</script>